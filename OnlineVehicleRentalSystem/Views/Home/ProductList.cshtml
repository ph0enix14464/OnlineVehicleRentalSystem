@using PagedList;
@using PagedList.Mvc;


@model IPagedList<OnlineVehicleRentalSystem.Models.tblVehicle>
    @using OnlineVehicleRentalSystem.Models;

@{
                /**/

                ViewBag.Title = "ProductList";
                Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--banner-->
<div class="banner-top">
    <div class="container">
        <h3>List Of Vehicle</h3>
        <h4><a href="@Url.Action("Index","Home")">Home</a><label>/</label>List Of Vehicle</h4>
        <div class="search-form">
            @using (Html.BeginForm("ProductList", "Home", FormMethod.Post))
            {
                @Html.TextBox("search", null, new { @placeHolder = "Enter Keyword" })

                <input type="submit" value=" ">
            }

        </div>
        <div class="clearfix"> </div>
    </div>
</div>
<!--login-->
<div class="content-top ">
    <div class="container ">
        <div class="spec ">
            <h3>List Of Vehicle</h3>
            <div class="ser-t">
                <b></b>
                <span><i></i></span>
                <b class="line"></b>
            </div>
        </div>
        <div class="tab-head ">

            <div class=" tab-content tab-content-t ">
                <div class="tab-pane active text-style" id="tab1">
                    <div class=" con-w3l">

                        @if (Model.Count() == 0)
                        {
                            <tr>
                                <td colspan="5">
                                    No Data were found
                                </td>
                            </tr>
                        }



                        else
                        {

                            foreach (var item in Model)




                            {
                                <div class="col-md-3 m-wthree">
                                    <div class="col-m">

                                        @* <a href="@Url.Action("ViewItem", "Home", new { id = item.ItemId })" data-toggle2="tooltip" data-placement="top" title="Quick View" data-toggle="modal" class="viewitem"><span class="fa fa-search"></span></a>*@
                                        <a href="@Url.Action("ViewItem", "Home", new { id = item.VehicleId })" data-toggle="modal" data-target="#myModal" class="viewitem">
                                            <img src="~/images/ItemImages/@item.SmallImage" class="img-responsive" alt="">

                                        </a>
                                        <div class="mid-1">
                                            <div class="women">
                                                <h6><a href="single.html">@item.Title</a></h6>
                                            </div>

                                            <div class="mid-2">

                                                <p> <b>Price:</b><label>@item.Price</label></p>

                                                <div class="clearfix"></div>
                                            </div>
                                            <div class="add">
                                                <a class="btn btn-danger" href="@Url.Action("AddToCart","ShoppingCart", new { id = item.VehicleId }, "")"><span class="fa fa-shopping-cart"></span>Add To Cart</a>
                                            </div>

                                        </div>
                                    </div>
                                </div>

                            }
                        }
                        @Html.PagedListPager(Model, page => Url.Action("ProductList", new { page, search = Request.QueryString["search"] }), new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded, DisplayPageCountAndCurrentLocation = true, DisplayItemSliceAndTotal = true })
                        <div class="clearfix"></div>
                    </div>
                </div>

            </div>


        </div>
    </div>

</div>
<div class="modal fade" id="quick-view-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content modal-info">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="divForUpdate">

            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {

        $('.viewitem').click(function (event) {
            event.preventDefault();
            $.get(this.href, function (response) {
                $('.divForUpdate').html(response);
            });
            $('#quick-view-modal').modal({
                backdrop: 'static',
            }, 'show');
        });
    });
</script>

