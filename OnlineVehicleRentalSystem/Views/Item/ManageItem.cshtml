
    @{
        ViewBag.Title = "ManageItem";
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }

    <div class="row">
        <ol class="breadcrumb">
            <li>
                <a href="#">
                    <em class="fa fa-home"></em>
                </a>
            </li>
            <li class="active">Manage Item</li>
        </ol>
    </div><!--/.row-->
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    View Sub Category
                    <ul class="pull-right">

                        <li style="list-style:none">
                            <a class="btn btn-success" style="margin-bottom:10px" href="@Url.Action("AddOrEdit","Item")">><i class="fa fa-plus"></i> Add New</a>
                        </li>

                    </ul>

                </div>
                <div class="panel-body">
                    <table id="employeeTable" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th>ItemId</th>

                                <th>Product Name</th>
                                <th>Price</th>
                                <th>Small Image</th>
                                <th>IsAvailable</th>

                                <th>Action</th>
                            </tr>
                        </thead>

                    </table>
                </div>
            </div>
        </div>
    </div>
